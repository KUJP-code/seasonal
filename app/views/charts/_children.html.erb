<!-- Attendees summary -->
<div class="card w-100 mb-4">
  <div class="card-header">
    <h4 class="mb-0"><%= t(".attendees_summary") %></h4>
  </div>
  <div class="card-body d-flex justify-content-center align-items-center gap-5 p-3 w-100 text-center">
    <div class="d-flex flex-column">
      <h2 class="fw-semibold text-primary">
        <%= @children.select { |c| c.category == 'internal' }.size %>
      </h2>
      <p class="fs-5">通学生人数</p>
    </div>
    <div class="d-flex flex-column">
      <h2 class="fw-semibold text-primary">
        <%= @children.select { |c| c.category == 'reservation' }.size %>
      </h2>
      <p class="fs-5">予約生人数</p>
    </div>
    <div class="d-flex flex-column">
      <h2 class="fw-semibold text-primary">
        <%= @children.select { |c| c.category == 'external' }.size %>
      </h2>
      <p class="fs-5">非会員人数</p>
    </div>
    <div class="d-flex flex-column">
      <h2 class="fw-semibold text-primary">
        <%= @children.size %>
      </h2>
      <p class="fs-5">合計人数</p>
    </div>
  </div>
</div>

<!-- Attendees breakdown (charts) -->
<div class="card w-100 mb-4">
  <div class="card-header">
    <h4 class="mb-0"><%= t(".attendees_breakdown") %></h4>
  </div>
  <div class="card-body d-flex flex-row">
    <%= pie_chart @children.group(:grade).count,
                  title: t('.attendees_by_grade'),
                  height: '50dvh' %>
    <%= pie_chart @children.group(:category).count,
                  title: t('.attendees_by_category'),
                  height: '50dvh' %>
  </div>
</div>

<!-- VIPs -->
<div class="card w-100 mb-4">
  <div class="card-header">
    <h4 class="mb-0"><%= t(".vips") %></h4>
  </div>
  <div class="card-body">
    <% vips = @children.reduce([]) do |arr, c|
                      cost = c.real_invoices
                              .select { |i| @event_ids.include?(i.event_id) }
                              .reduce(0) { |sum, i| sum + i.total_cost }
                      arr << [c, cost]
                      arr
                    end
                    .sort_by! { |c| c[1] }
                    .reverse
                    .first(10)
                    .to_h { |s| [s[0].name, {
                                  en_name: s[0].en_name,
                                  id: s[0].id,
                                  registrations: s[0].real_invoices.reduce(0) { |sum, i| sum + i.registrations_count },
                                  total_cost: s[1]
                                }] } %>

    <div class="table-responsive">
      <table class="table table-striped table-hover text-center align-middle mb-0">
        <thead class="table-primary">
          <tr>
            <th>名前</th>
            <th>名前(ローマ字)</th>
            <th><%= t(".registrations") %></th>
            <th>合計</th>
          </tr>
        </thead>
        <tbody>
          <% vips.each do |name, data| %>
            <tr>
              <td><%= link_to name, child_path(data[:id]) %></td>
              <td><%= link_to data[:en_name], child_path(data[:id]) %></td>
              <td><%= link_to data[:registrations], invoices_path(child: data[:id]) %></td>
              <td><%= number_to_currency(data[:total_cost], unit: '円', precision: 0, locale: :ja) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Hat Kids (only when a specific school is selected) -->
<% unless @nav[:school].id.zero? %>
  <div class="card w-100 mb-4">
    <div class="card-header">
      <h4 class="mb-0"><%= t(".hat_kids") %></h4>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover text-center align-middle mb-0">
          <thead class="table-primary">
            <tr>
              <th><%= t('.name') %></th>
              <th><%= t('.en_name') %></th>
            </tr>
          </thead>
          <tbody>
            <% @hat_kids.each do |k| %>
              <tr>
                <td><%= k.name %></td>
                <td><%= k.en_name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
